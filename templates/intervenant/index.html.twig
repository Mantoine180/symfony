{% extends 'base.html.twig' %}

{% block title %}Intervenant index{% endblock %}

{% block body %}
    <h1>Intervenant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_intervenant</th>
                <th>Id_utilisateur</th>
                <th>Id_role</th>
                <th>Id_matiere</th>
                <th>Nb_heure</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for intervenant in intervenants %}
            <tr>
                <td>{{ intervenant.id }}</td>
                <td>{{ intervenant.idIntervenant }}</td>
                <td>{{ intervenant.idUtilisateur }}</td>
                <td>{{ intervenant.idRole }}</td>
                <td>{{ intervenant.idMatiere }}</td>
                <td>{{ intervenant.nbHeure }}</td>
                <td>
                    <a href="{{ path('app_intervenant_show', {'id': intervenant.id}) }}">show</a>
                    <a href="{{ path('app_intervenant_edit', {'id': intervenant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_intervenant_new') }}">Create new</a>
{% endblock %}
